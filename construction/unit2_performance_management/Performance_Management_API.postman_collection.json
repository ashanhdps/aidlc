			"item": [
				{
					"name": "1.1 Provide Positive Feedback",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"feedbackId\", jsonData.feedbackId);",
									"    console.log(\"✅ Feedback ID saved: \" + jsonData.feedbackId);",
									"    pm.test(\"Feedback created successfully\", function () {",
									"        pm.response.to.have.status(201);",
									"    });",
									"    pm.test(\"Response has feedbackId\", function () {",
									"        pm.expect(jsonData.feedbackId).to.exist;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-User-Id",
								"value": "{{aliceId}}",
								"description": "Alice giving feedback"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"receiverId\": \"{{bobId}}\",\n  \"kpiId\": \"{{kpiCodeQuality}}\",\n  \"kpiName\": \"Code Quality\",\n  \"feedbackType\": \"POSITIVE\",\n  \"contentText\": \"Excellent code reviews! Your attention to detail caught several bugs before production.\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/feedback",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"feedback"
							]
						},
						"description": "Alice provides positive feedback to Bob about code quality (US-019)"
					},
					"response": []
				},
